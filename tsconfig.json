{
    "include": [
        "src/module/**/*",
        "./gulpfile.ts"
    ],
    "compilerOptions": {
        "types": [
            "node",
            "foundry-pc-types"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "ES6",
        "lib": [
            "DOM",
            "ES6",
            "ES2017",
            "ES2018",
            "ES2020",
            "ES2021"
        ]
    }
}