{
    "include": [
        "src/module/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist/module/",
        "types": [
            "node",
            "@league-of-foundry-developers/foundry-vtt-types"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "ES6",
        "lib": [
            "DOM",
            "ES6",
            "ES2017",
            "ES2018",
            "ES2020",
            "ES2021"
        ],
        "incremental": true,
        "tsBuildInfoFile": "tsconfig.tsbuildinfo"
    }
}